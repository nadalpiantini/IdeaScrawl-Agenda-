# ID: ENV-EXAMPLE-001-V01
# IdeaScrawl Agenda - Environment Variables Template

# Leonardo API Configuration
LEONARDO_API_KEY=your_leonardo_api_key_here

# Supabase Configuration  
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# FastAPI Configuration
DEBUG=true
ENVIRONMENT=development

# CORS Origins (for development)
ALLOWED_ORIGINS=http://localhost:3000,chrome-extension://your_extension_id

# Storage Configuration
STORAGE_BUCKET=pages
MAX_FILE_SIZE=10485760  # 10MB en bytes

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Ollama Local Fallback Configuration
OLLAMA_IMAGE_MODEL=stable-diffusion
OLLAMA_TIMEOUT=120